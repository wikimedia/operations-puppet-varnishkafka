/var/log/varnishkafka.log {
  daily
  rotate 7
  create 0664 syslog adm
  missingok
  compress
  delaycompress
  postrotate
    service rsyslog reload >/dev/null
  endscript
}

/var/cache/varnishkafka/*.stats.json {
  weekly
  rotate 4
  create 0644 varnishlog root
  missingok
  compress
  delaycompress
  postrotate
    service varnishkafka reload >/dev/null
  endscript
}
